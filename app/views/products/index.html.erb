<div class="jumbotron">
  <h1><%= (t 'welcome') %> </h1>
  <p><%= t 'long_string' %></p>
  <p><a href="#" class="btn btn-primary btn-lg"><%= t 'learn_more' %></a></p>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'categories' %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% Category.all.each do |category| %>
          <li><%= link_to category.send("name_" + "#{I18n.locale}"), products_show_category_path(category) %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12 products-pagination">
        <%= will_paginate @products %>
      </div>
    </div>

    <div class="row">
        <% @products.each do |product| %>

        <div class="col-sm-6 product-item">
          <div class="panel panel-default">
            <div class="panel-body">
              <h3><%= product.send("title_" + "#{I18n.locale}") %></h3>
              <div><%= image_tag product.image_url(:thumb) %></div>
              <h4>$<%= product.price %></h4>
              <p>
                <%= link_to (t 'view'), products_show_product_path(product), class: "btn btn-default" %>
                <button class="btn btn-primary"><%= t 'add_to_cart' %></button>
              </p>
            </div>
          </div>
        </div>

        <% end %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'cart' %></h3>
        </div>
        <div class="panel-body">
          <%= t 'your_cart_is_empty' %>
        </div>
      </div>
  </div>
</div>
