<div class="jumbotron">
  <h1><%= (t 'welcome') %> </h1>
  <p><%= t 'long_string' %></p>
  <p><a href="#" class="btn btn-primary btn-lg"><%= t 'learn_more' %></a></p>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'categories' %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% Category.all.each do |category| %>
            <li><a href="#"><%= category.send("name_" + "#{I18n.locale}") %></a></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <h1><%= @product.send("title_" + "#{I18n.locale}") %></h1>
      <p><%= @product.send("description_" + "#{I18n.locale}") %></p>
      <p>
          Price: <b><%= @product.price %></b>
      </p>
      <p>
          <b>Category: </b> <%= @product.category.send("name_" + "#{I18n.locale}") if @product.category != nil %>
      </p>
      <div>
          <%= link_to (t 'back_to_list'), root_path %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'cart' %></h3>
        </div>
        <div class="panel-body">
          <%= t 'your_cart_is_empty' %>
        </div>
      </div>
  </div>
</div>
  