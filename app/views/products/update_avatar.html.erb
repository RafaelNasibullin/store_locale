<%= form_for @user, html: {class: 'form-horizontal'}, url: products_save_avatar_path, method: :post do |f| %>

    <div class="form-group <%= 'has-error' if @user.errors[:image].any? %>">
      <%= f.label (t 'image'), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :image %>
        <%= render 'shared/field_errors', object: @user, field_name: :image %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit (t 'update_avatar'), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>