<div class="col-sm-6 product-item">
  <div class="panel panel-default">
    <div class="panel-body">
    <h3><%= t '.name' %><%=  @product.send("title_" + "#{I18n.locale}") %></h3>
      <h4><%= t '.description' %><%= @product.send("description_" + "#{I18n.locale}") %></h4>
      <div class="img" style="background-image: url('<%= image_path product_image(@product.id) %>');"></div>
      <h4><%= t '.price' %><%= @product.price %></h4>
      <h4><%= t '.categories' %><%= @product.category.send("name_" + "#{I18n.locale}") %></h4>
    </div>
  </div>
  <%= link_to (t '.back'), root_path %>
</div>
