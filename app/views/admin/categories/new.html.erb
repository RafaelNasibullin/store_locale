<div class="row">
  <div class="col-sm-12">
    <h1><%= t 'new_category' %></h1>
  </div>
</div>

<hr />

<%= form_for [:admin, @category], html: {class: 'form-horizontal'} do |f| %>

  <div class="form-group <%= 'has-error' if @category.errors[:name_en].any? %>">
    <%= f.label (t 'name_en'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name_en, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @category, field_name: :name_en %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @category.errors[:name_ru].any? %>">
    <%= f.label (t 'name_ru'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name_ru, class: 'form-control' %>
      <%= render 'shared/field_errors', object: @category, field_name: :name_ru %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit (t 'create_category'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
